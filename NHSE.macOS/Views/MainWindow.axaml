<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NHSE.macOS.Views.MainWindow"
        Title="NHSE - Animal Crossing: New Horizons Save Editor"
        Width="800" Height="600">
    <Grid RowDefinitions="Auto,*">
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Open..." Name="OpenMenuItem" />
                <Separator />
                <MenuItem Header="Exit" Name="ExitMenuItem" />
            </MenuItem>
        </Menu>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="NHSE - Animal Crossing: New Horizons Save Editor" 
                       FontSize="24" Margin="0,0,0,20"/>
            <TextBlock Text="Click File > Open to load a save file" 
                       FontSize="14" Opacity="0.7"/>
        </StackPanel>
    </Grid>
</Window>
