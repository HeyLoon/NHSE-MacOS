<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NHSE.macOS.ViewModels.Player"
             x:Class="NHSE.macOS.Views.Player.AchievementEditorView"
             x:DataType="vm:AchievementEditorViewModel"
             Width="400" Height="600">

    <Grid RowDefinitions="*,Auto" Margin="10">
        <!-- Achievement List -->
        <DataGrid Grid.Row="0" ItemsSource="{Binding Achievements}" AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Content="Cancel" IsCancel="True"/>
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
        </StackPanel>
    </Grid>
</UserControl>
