<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NHSE.macOS.ViewModels.Player"
             x:Class="NHSE.macOS.Views.Player.FlagEditorView"
             x:DataType="vm:FlagEditorViewModel"
             Width="400" Height="600">

    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <TextBox Text="{Binding SearchText}" Watermark="Search flags..." Width="200"/>
            <Button Content="Set All" Command="{Binding SetAllCommand}"/>
            <Button Content="Clear All" Command="{Binding ClearAllCommand}"/>
        </StackPanel>

        <!-- Flag List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding FlagsList}" AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Index" Binding="{Binding Index}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Set" Binding="{Binding IsSet}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Content="Cancel" IsCancel="True"/>
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
        </StackPanel>
    </Grid>
</UserControl>
