<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NHSE.macOS.ViewModels.Player"
             x:Class="NHSE.macOS.Views.Player.ReactionEditorView"
             x:DataType="vm:ReactionEditorViewModel"
             Width="400" Height="600">

    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
            <Button Content="Set All Known" Command="{Binding SetAllKnownCommand}"/>
            <Button Content="Set All Unknown" Command="{Binding SetAllUnknownCommand}"/>
        </StackPanel>

        <!-- Reaction List -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Reactions}" AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ReactionId}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Reaction" Binding="{Binding ReactionName}" Width="*" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Known" Binding="{Binding IsKnown}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Content="Cancel" IsCancel="True"/>
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"/>
        </StackPanel>
    </Grid>
</UserControl>
